{
  "name": "@cloudpss/rpc",
  "description": "Rpc used in cloudpss, a simple shim of apache thrift",
  "version": "0.2.0",
  "author": "CloudPSS",
  "license": "MIT",
  "engines": {
    "node": ">= 12"
  },
  "homepage": "https://github.com/CloudPSS/Rpc",
  "repository": {
    "type": "git",
    "url": "git@github.com:CloudPSS/Rpc.git"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "src/index.d.ts",
  "bin": {
    "thrift": "./bin/thrift.js"
  },
  "scripts": {
    "start": "yarn clean && tsc --watch",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc --outDir dist/esm --module ESNext",
    "build:cjs": "tsc",
    "postinstall": "node ./bin/build-thrift.js",
    "clean": "rimraf dist",
    "prepublishOnly": "yarn build",
    "prepare": "husky install",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "eslint --ext .js,.ts .",
    "test": "mkdirp ./test/thrift && node ./bin/thrift.js -r --gen js:ts,es6,node --gen markdown:suffix=md -o ./test/thrift ./test/room.thrift && yarn format"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^36.1.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "mkdirp": "^1.0.4",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/node": "^16.11.0",
    "@types/node-int64": "^0.4.29",
    "@types/thrift": "^0.10.10",
    "node-int64": "^0.4.0",
    "thrift": "0.15.0",
    "tslib": "^2.3.1"
  }
}
