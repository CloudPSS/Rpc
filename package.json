{
  "name": "@cloudpss/rpc",
  "description": "Rpc used in cloudpss, a simple shim of apache thrift",
  "version": "0.3.0",
  "author": "CloudPSS",
  "license": "MIT",
  "engines": {
    "node": ">= 14"
  },
  "homepage": "https://github.com/CloudPSS/Rpc",
  "repository": {
    "type": "git",
    "url": "git@github.com:CloudPSS/Rpc.git"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "bin": {
    "thrift": "./bin/thrift.js"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "eslint --ext .js,.ts .",
    "start": "yarn clean && tsc --watch",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc --outDir dist/esm --module ESNext",
    "build:cjs": "tsc",
    "clean": "rimraf dist",
    "prepublishOnly": "yarn build",
    "test:build": "mkdirp ./test/thrift && node ./bin/thrift.js -r --gen js:ts,es6,node --gen markdown:suffix=md -o ./test/thrift ./test/room.thrift && yarn format",
    "test:server": "ts-node ./test/server.ts",
    "test:client": "ts-node ./test/client.ts"
  },
  "prettier": "@cloudpss/prettier-config",
  "commitlint": {
    "extends": "@cloudpss"
  },
  "devDependencies": {
    "@cloudpss/commitlint-config": "^1.1.1",
    "@cloudpss/eslint-config": "^1.1.1",
    "@cloudpss/lint-staged-config": "^1.1.1",
    "@cloudpss/prettier-config": "^1.1.1",
    "@cloudpss/tsconfig": "^1.1.1",
    "husky": "^7.0.4",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@types/node": "^17.0.5",
    "@types/node-int64": "^0.4.29",
    "@types/thrift": "^0.10.10",
    "node-int64": "^0.4.0",
    "thrift": "0.15.0",
    "tslib": "^2.3.1"
  }
}
