{
  "name": "@cloudpss/rpc",
  "description": "Rpc used in cloudpss, a simple shim of apache thrift",
  "version": "0.3.2",
  "author": "CloudPSS",
  "license": "MIT",
  "engines": {
    "node": ">= 16"
  },
  "type": "module",
  "homepage": "https://github.com/CloudPSS/Rpc",
  "repository": {
    "type": "git",
    "url": "git@github.com:CloudPSS/Rpc.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./types": "./dist/types.js"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "thrift": "./bin/thrift.js"
  },
  "keywords": [
    "thrift",
    "rpc",
    "thrift-js"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "eslint --ext .js,.ts .",
    "start": "yarn clean && tsc --watch",
    "build:peggy": "peggy --format es -o src/parser/thrift-idl.g.js src/parser/thrift-idl.pegjs",
    "build": "yarn clean && yarn build:peggy && tsc",
    "clean": "rimraf dist",
    "prepublishOnly": "yarn build",
    "test:build": "mkdirp ./test/thrift && node ./bin/thrift.js -r --gen js:ts,es6,node --gen markdown:suffix=md -o ./test/thrift ./test/room.thrift && yarn format",
    "test:server": "node ./test/server.js",
    "test:client": "node ./test/client.js"
  },
  "prettier": "@cloudpss/prettier-config",
  "commitlint": {
    "extends": "@cloudpss"
  },
  "devDependencies": {
    "@cloudpss/commitlint-config": "^1.1.5",
    "@cloudpss/eslint-config": "^1.1.5",
    "@cloudpss/lint-staged-config": "^1.1.5",
    "@cloudpss/prettier-config": "^1.1.5",
    "@cloudpss/tsconfig": "^1.1.5",
    "husky": "^7.0.4",
    "mkdirp": "^1.0.4",
    "peggy": "^1.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@types/node": ">= 16",
    "tslib": "^2.3.1"
  }
}
