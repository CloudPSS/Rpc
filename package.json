{
  "name": "@cloudpss/rpc",
  "description": "Rpc used in cloudpss, based on apache thrift",
  "version": "1.0.0-alpha.0",
  "author": "CloudPSS",
  "license": "MIT",
  "engines": {
    "node": ">= 16"
  },
  "type": "module",
  "homepage": "https://github.com/CloudPSS/Rpc",
  "repository": {
    "type": "git",
    "url": "git@github.com:CloudPSS/Rpc.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./types": "./dist/types.js"
  },
  "imports": {
    "#package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "thrift": "./bin/cli.js"
  },
  "keywords": [
    "thrift",
    "rpc",
    "thrift-js"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "eslint --ext .js,.ts .",
    "start": "yarn clean && tsc --watch",
    "build:peggy": "peggy --format es -o src/parser/thrift-idl.g.js src/parser/thrift-idl.pegjs",
    "build": "yarn clean && yarn build:peggy && tsc",
    "clean": "rimraf dist",
    "prepublishOnly": "yarn build",
    "test:build": "mkdirp ./test/thrift && node ./bin/thrift.js -r --gen js:ts,es6,node --gen markdown:suffix=md -o ./test/thrift ./test/room.thrift && yarn format",
    "test:server": "node ./test/server.js",
    "test:client": "node ./test/client.js"
  },
  "prettier": "@cloudpss/prettier-config",
  "commitlint": {
    "extends": "@cloudpss"
  },
  "devDependencies": {
    "@cloudpss/commitlint-config": "^1.2.3",
    "@cloudpss/eslint-config": "^1.2.3",
    "@cloudpss/lint-staged-config": "^1.2.3",
    "@cloudpss/prettier-config": "^1.2.3",
    "@cloudpss/tsconfig": "^1.2.3",
    "husky": "^8.0.3",
    "mkdirp": "^2.1.3",
    "peggy": "^3.0.0",
    "rimraf": "^4.1.2",
    "rpc-legacy": "npm:@cloudpss/rpc@^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@types/node": "^18.14.1",
    "tslib": "^2.5.0"
  }
}
