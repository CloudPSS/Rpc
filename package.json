{
  "name": "@cloudpss/rpc",
  "description": "Rpc used in cloudpss, a simple shim of apache thrift",
  "version": "0.0.1",
  "author": "CloudPSS",
  "license": "MIT",
  "engines": {
    "node": ">= 12"
  },
  "homepage": "https://github.com/CloudPSS/Rpc",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "src/index.d.ts",
  "bin": {
    "thrift": "bin/thrift-0.14.1.exe"
  },
  "scripts": {
    "start": "yarn clean && tsc --outDir dist/cjs --module commonjs --watch",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc --outDir dist/esm",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs --target ES5",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "format": "prettier --write .",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx,.vue .",
    "test": "mkdirp ./test/thrift && ./bin/thrift -r --gen js:ts,es6,node --gen markdown:suffix=md -o ./test/thrift ./test/room.thrift"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^34.8.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "type-fest": "^1.1.3",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@types/node": "^15.3.0",
    "@types/node-int64": "^0.4.29",
    "@types/thrift": "^0.10.10",
    "node-int64": "^0.4.0",
    "thrift": "0.14.1",
    "tslib": "^2.2.0"
  }
}
