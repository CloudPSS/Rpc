{
  "name": "@cloudpss/rpc",
  "description": "Rpc used in cloudpss, based on apache thrift",
  "version": "1.0.0-alpha.0",
  "author": "CloudPSS",
  "license": "MIT",
  "engines": {
    "node": ">= 18"
  },
  "type": "module",
  "homepage": "https://github.com/CloudPSS/Rpc",
  "repository": {
    "type": "git",
    "url": "git@github.com:CloudPSS/Rpc.git"
  },
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./types": "./dist/types.js"
  },
  "imports": {
    "#package.json": "./package.json"
  },
  "bin": {
    "cloudpss-rpc": "./bin/cli.js"
  },
  "keywords": [
    "thrift",
    "rpc",
    "thrift-js"
  ],
  "scripts": {
    "start": "pnpm clean && tsc --watch",
    "build:peggy": "peggy --format es -o src/parser/thrift-idl.g.js src/parser/thrift-idl.pegjs",
    "build": "pnpm clean && pnpm build:peggy && tsc",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm build",
    "test:build": "mkdirp ./test/thrift && thrift -r --gen js:ts,es6,node --gen markdown:suffix=md -o ./test/thrift ./test/room.thrift && pnpm format",
    "test:server": "node --watch --enable-source-maps ./test/server.js",
    "test:client": "node --watch --enable-source-maps ./test/client.js",
    "prepare": "husky || echo Failed to initialize husky",
    "format": "prettier --cache --cache-strategy content --ignore-path .gitignore --write .",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/ --cache-strategy content"
  },
  "prettier": "@cloudpss/prettier-config",
  "commitlint": {
    "extends": "@cloudpss"
  },
  "devDependencies": {
    "@cloudpss/commitlint-config": "^3.0.8",
    "@cloudpss/eslint-config": "^3.0.8",
    "@cloudpss/lint-staged-config": "^3.0.8",
    "@cloudpss/prettier-config": "^3.0.8",
    "@cloudpss/tsconfig": "^3.0.8",
    "husky": "^9.1.5",
    "mkdirp": "^3.0.1",
    "node-int64": "^0.4.0",
    "peggy": "^4.0.3",
    "rimraf": "^6.0.1",
    "rpc-legacy": "npm:@cloudpss/rpc@^0.4.3",
    "thrift": "^0.20.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@cloudpss/id": "^0.5.40",
    "@types/node": "^22.5.4"
  }
}
